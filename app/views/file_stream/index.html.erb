<h1 class="h1">Fill with information, it's time to stream data!</h1>
<hr />
<div class="card">
  <div class="card-body">
    <%= form_tag filter_and_stream_path, multipart: true do %>
      <div class="form-group">
        <%= label_tag :column_numbers, 'Column numbers' %>
        <%= text_field_tag :column_numbers, params[:column_numbers], placeholder: 'Column numbers separated by comma (0,1,4...)', class: 'form-control', required: true %>
      </div>
      <div class="form-group">
        <%= label_tag :xls_file, 'XLS File' %>
        <%= file_field_tag :xls_file, placeholder: 'XLS file with the content that will be extracted and streamed', class: 'form-control', required: true %>
      </div>
      <button type="submit" class="btn btn-primary">Filter and stream data</button>
    <% end %>
  </div>
</div>
